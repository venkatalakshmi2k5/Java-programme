public class Main{
	public static void main(String[] args) {
	    int number = 0;
	    if (number>0){
	        System.out.println("the number" + number + "is positive");
	    }
	    else if (number<0){
	        System.out.println("the number"+ number+"is negative");
	    }
	    else{
	        	System.out.println("the number"+ number+ "is zero");
	    }
	}
}
